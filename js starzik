}
},
{
text: "Co Pani tutaj robi?",
action: () => {
showDialog("Pani sprzƒÖtajƒÖca: 'SprzƒÖtam podw√≥rko. Kto≈õ musi dbaƒá o porzƒÖdek!'");
}
}
];
showDialogWithOptions("Pani sprzƒÖtajƒÖca: 'Dzie≈Ñ dobry! Piƒôkny wiecz√≥r.'", options, "üëµ Pani SprzƒÖtajƒÖca");
}
}

