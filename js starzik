ctx.fillRect(x + 31, y + 34, 1, 1);

// WƒÖsy s≈Çu≈ºbowe (przystrzy≈ºone)
ctx.fillStyle = '#3a3a2a';
ctx.fillRect(x + 26, y + 36, 8, 2);

// Usta (powa≈ºne)
