    );
  }

  examineLamp() {
    const options = [
      {
        text: "Sprawd≈∫ ≈ºar√≥wkƒô",
        action: () => {
          showDialog(
            "Stara ≈ºar√≥wka wciƒÖ≈º ≈õwieci ciep≈Çym ≈õwiat≈Çem. Marka 'Tungsram' - wƒôgierska produkcja."
          );
        }
      },
      {
