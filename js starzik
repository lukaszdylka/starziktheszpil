ctx.fillRect(x + 29, y + 42, 6, 15);
ctx.fillStyle = '#1a1a4a';
ctx.fillRect(x + 28, y + 41, 8, 4);

// Wƒôze≈Ç krawata
ctx.fillStyle = '#3a3a6a';
