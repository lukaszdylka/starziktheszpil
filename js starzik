  examineWindow() {
    const options = [
      {
        text: "Sprawd≈∫ parapet",
        action: () => {
          showDialog(
            "Na parapecie le≈ºƒÖ stare gazety z 2013 roku i zwiƒôd≈Çy kwiat w szklanym s≈Çoiku."
          );
        }
      },
      {
        text: "Spojrz przez okno",
        action: () => {
          showDialog(
            "Przez okno widaƒá deszczowe podw√≥rko gdzie by≈Çe≈õ wcze≈õniej. Deszcz wciƒÖ≈º pada."
          );
