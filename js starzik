            addItem("Stare monety");
            showDialog(
              "Pod poduszkami znalaz≈Çe≈õ kilka starych monet i guzik. Monety dodane do ekwipunku."
            );
          } else {
            showDialog("Ju≈º sprawdzi≈Çe≈õ poduszki. Nic wiƒôcej tam nie ma.");
          }
        }
      },
      {
        text: "Sprawd≈∫ za sofƒÖ",
        action: () => {
          if (!this.searchedPlaces.sofa && hasItem("Kartka z kodem")) {
            this.searchedPlaces.sofa = true;
            addItem("Dokumenty");
            showDialog(
              "Za sofƒÖ stoi ma≈Çy sejf! Kod z kartki dzia≈Ça≈Ç! Znalaz≈Çe≈õ wa≈ºne dokumenty i testament Starzika!"
            );
          } else if (!hasItem("Kartka z kodem")) {
            showDialog(
              "Za sofƒÖ stoi ma≈Ça skrytka z kodem cyfrowym. Potrzebujesz kodu aby jƒÖ otworzyƒá."
            );
          } else {
            showDialog("Sejf za sofƒÖ jest ju≈º otwarty i pusty.");
          }
        }
      }
    ];
    showDialogWithOptions(
      "Wygodna, stara sofa w brƒÖzowym kolorze. Obicie jest miejscami wytarte.",
